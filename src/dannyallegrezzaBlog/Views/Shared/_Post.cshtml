@inject dannyallegrezzaBlog.Models.FormattingService Format
@model dannyallegrezzaBlog.Models.Post


<div class='blog-post'>
    <h2 class='title'>
        <a href="#">@Model.Title</a>
    </h2>
    <p class='metadata'>
        <span>@Format.AsReadableDate(Model.PostedDate)</span>
        by <a class="author" href='#'>@Model.Author</a>
    </p>
    <section class="body">
        <p>
            @Model.Body
        </p>
        @*<p>
            Description: @Model.GetDescription()
        </p>*@
    </section>
</div><!-- /.blog-post -->



<nav class="hide">
    <ul class="pager">
        <li><a href="#">Previous</a></li>
        <li><a href="#">Next</a></li>
    </ul>
</nav>


